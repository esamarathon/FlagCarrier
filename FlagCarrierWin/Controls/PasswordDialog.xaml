<Window x:Class="FlagCarrierWin.Controls.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter certificate password"
		ShowInTaskbar="False"
		WindowStartupLocation="CenterOwner"
		Height="100" Width="450">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<Label Content="Cert Password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="3" Grid.Column="0" Grid.Row="0" />
		<PasswordBox Name="pwBox" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="3" Margin="3" />
		<Button Click="okButton_Click" IsDefault="True" Content="OK" Grid.Column="2" Grid.Row="2" Margin="3" />
        <Button IsCancel="True" Content="Cancel" Grid.Column="3" Grid.Row="2" Margin="3" />
    </Grid>
</Window>
